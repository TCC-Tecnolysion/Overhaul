@model string // modelo pra receber o cod pix gerado na controller

@{
    ViewData["Title"] = "Pagamento via Pix";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-info">
    <h3>Código Pix:</h3>
    <p>@Model</p> <!-- exibir o codigo -->
</div>

<div>
    <h4>Confirme seu pagamento clicando no botão abaixo:</h4>
    <form asp-action="@(ViewBag.IdPedido == null ? "ConfirmarEndereco" : "ConfirmarEndereco2")" method="post">
        <input type="hidden" name="codigoPix" value="@Model" /> <!-- guardar o cod pix ao clicar -->
        <button type="submit" class="btn btn-success">Pagamento Concluído</button> <!-- como a lógica de pagamento não é real, botão pra confirmar -->
    </form>

</div>

