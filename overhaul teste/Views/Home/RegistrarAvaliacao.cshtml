@model overhaul_teste.Models.Avaliacao

<h2>Avalie sua Compra</h2>

<form asp-action="RegistrarAvaliacao" method="post">
    <input type="hidden" name="IdPedido" value="@Model.IdPedido" />
    <input type="hidden" name="IdCliente" value="@Model.IdCliente" />

    <div class="form-group">
        <label for="AvaliacaoNota">nota:</label>
        <input type="number" step="0.1" min="0" max="5" name="AvaliacaoNota" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="AvaliacaoEscrita">comentario:</label>
        <textarea name="AvaliacaoEscrita" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Enviar Avaliação</button>
</form>
