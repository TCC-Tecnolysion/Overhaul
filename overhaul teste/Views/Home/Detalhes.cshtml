@model overhaul_teste.Models.Carro

@{
    ViewData["Title"] = "Detalhes do Carro";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Overhaul</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #fff;
        }

        .overhaul-section {
            background-color: #121212;
            padding: 20px;
        }

        .aaaa {
            background-color: #121212;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            gap: 20px;
        }

        .outras-fotos {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .outras-fotos img {
                width: 100px;
                height: 100px;
                border-radius: 10px;
                object-fit: cover;
            }

        .principal img {
            width: 500px;
            border-radius: 10px;
            object-fit: cover;
        }

        .produto-info {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            flex: 1;
        }

            .produto-info h1 {
                font-size: 2em;
                margin-bottom: 10px;
            }

            .produto-info p {
                font-size: 1.2em;
                margin-bottom: 10px;
            }

        .estrelas span {
            font-size: 1.5em;
            color: #ffd700;
        }

        .preco span {
            font-size: 1.5em;
            color: #00ff00;
        }

        .preco p {
            font-size: 1em;
            color: #bbb;
        }

        .cores {
            margin-top: 10px;
            display: flex;
            align-items: center;
        }

        .cores-escolha {
            display: flex;
            flex-direction: row;
            margin-left: 10px;
        }

        .cor {
            width: 30px;
            height: 30px;
            margin-right: 10px;
            border-radius: 50%;
            border: 2px solid #fff;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        /* Cores específicas */
        .cor-vermelha {
            background-color: red;
        }

        .cor-azul {
            background-color: blue;
        }

        .cor-branca {
            background-color: white;
            border: 2px solid black; /* pra enxergar */
        }

        .cor-preta {
            background-color: black;
        }

        .cor-prata {
            background-color: silver;
        }

        /* cor nao selecionada */
        .cor.inativa {
            opacity: 0.4;
        }

        .quantidade {
            margin-top: 10px;
            display: flex;
            align-items: center;
        }

            .quantidade label {
                margin-right: 10px;
            }

            /* Ajustando cor do select */
            .quantidade select {
                padding: 5px;
                font-size: 1em;
                background-color: black; /* Cor de fundo preta */
                color: white; /* Texto branco */
                border: 1px solid white; /* Borda branca */
            }

        .botoes {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

            .botoes button {
                background-color: black; 
                border: 1px solid white; 
                color: white; 
                padding: 10px 15px;
                border-radius: 5px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                .botoes button:hover,
                .botoes button:active {
                    background-color: white; 
                    color: black;
                }

        .descricao {
            margin-top: 20px;
            padding: 20px;
            background-color: #1e1e1e; 
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <section class="overhaul-section">
        <div class="aaaa">
            <!-- no futuro mais atributos pra imagem nonbanco -->
            <div class="outras-fotos">
                <img src="@Model.Imagem" alt="imagem carro">
                <img src="@Model.Imagem" alt="imagem carro">
                <img src="@Model.Imagem" alt="imagem carro">
                <img src="@Model.Imagem" alt="imagem carro">
            </div>

            <div class="principal">
                <img src="@Model.Imagem" alt="Car">
            </div>

            <div class="produto-info">
                <h1>@Model.Modelo</h1>
                <p>Marca: @Model.Marca</p>
                <div class="estrelas">
                    <span>5.0 ★★★★★</span>
                </div>
                <div class="preco">
                    <span>A partir de R$ @Model.Preco</span>
                    <p>à vista no Pix (10% off)</p>
                </div>
                <div class="cores">
                    <span>Cor:</span>
                    <div class="cores-escolha">
                        <div class="cor cor-vermelha" data-cor="vermelho"></div>
                        <div class="cor cor-azul" data-cor="azul"></div>
                        <div class="cor cor-branca" data-cor="branco"></div>
                        <div class="cor cor-preta" data-cor="preto"></div>
                        <div class="cor cor-prata" data-cor="prata"></div>
                    </div>
                </div>
                <div class="quantidade">
                    <label for="quantidade">Quantidade:</label>
                    <select id="quantidade" name="quantidade">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </div>
                <div class="botoes">
                    <button class="comprar-agora">Comprar agora</button>
                    <button class="test-drive">Marcar Test Drive</button>
                </div>
            </div>
        </div>

        <div class="descricao">
            <p>Descrição:</p>
            <p>@Model.Descricao</p>
        </div>
    </section>

    <script>
 
        const cores = document.querySelectorAll('.cores-escolha .cor');
        const corAtual = "@Model.Cor".toLowerCase(); // cor do carro em questão

        // se clicar em outra cor(pensando em quando for fazer o crud dos carros)
        function destacarCor(corSelecionada) {
            cores.forEach(cor => {
                if (cor.getAttribute('data-cor') === corSelecionada) {
                    cor.classList.remove('inativa');
                } else {
                    cor.classList.add('inativa');
                }
            });
        }

        destacarCor(corAtual);

        // evento de click pra cada cor
        cores.forEach(cor => {
            cor.addEventListener('click', function () {
                let corSelecionada = this.getAttribute('data-cor');
                destacarCor(corSelecionada);
            });
        });
    </script>
</body>
</html>
